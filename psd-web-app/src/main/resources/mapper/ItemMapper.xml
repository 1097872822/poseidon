<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yoke.poseidon.web.mapper.ItemMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.yoke.poseidon.web.entity.Item">
        <id column="item_id" property="itemId"/>
        <result column="name" property="name"/>
        <result column="sell_point" property="sellPoint"/>
        <result column="price" property="price"/>
        <result column="num" property="num"/>
        <result column="limit_num" property="limitNum"/>
        <result column="image" property="image"/>
        <result column="c_id" property="cId"/>
        <result column="status" property="status"/>
        <result column="created" property="created"/>
        <result column="updated" property="updated"/>
        <result column="sort_order" property="sortOrder"/>
        <result column="remark" property="remark"/>
        <result column="description" property="description"/>
    </resultMap>

    <sql id="itemColumns">
        select item_id,
               name,
               c_id,
               sell_point,
               price,
               limit_num,
               image,
               remark,
               sort_order
        from poseidon.db_item
    </sql>
    <sql id="itemColumnsWithBLOB">
        select *
        from poseidon.db_item
    </sql>
    <select id="selectById" resultType="com.yoke.poseidon.web.entity.Item">
        <choose>
            <when test="blob==true">
                <include refid="itemColumnsWithBLOB"/>
            </when>
            <otherwise>
                <include refid="itemColumns"/>
            </otherwise>
        </choose>
        where item_id=#{id}
    </select>


    <select id="selectIdIn" resultType="com.yoke.poseidon.web.entity.Item">
        <choose>
            <when test="blob==true">
                <include refid="itemColumnsWithBLOB"/>
            </when>
            <otherwise>
                <include refid="itemColumns"/>
            </otherwise>
        </choose>
        <where>
            item_id in
            <foreach collection="ids" item="id" index="index" open="(" separator="," close=")">
                #{id}
            </foreach>
        </where>
        <choose>
            <when test="sort!=null">
                ${sort}
            </when>
            <otherwise>
                order by sort_order asc
            </otherwise>
        </choose>
    </select>


    <select id="selectByCIds" resultType="com.yoke.poseidon.web.entity.Item">
        <choose>
            <when test="blob==true">
                <include refid="itemColumnsWithBLOB"/>
            </when>
            <otherwise>
                <include refid="itemColumns"/>
            </otherwise>
        </choose>
        <where>
            c_id in
            <foreach collection="cIds" item="id" index="index" open="(" separator="," close=")">
                #{id}
            </foreach>
        </where>
        <choose>
            <when test="sort!=null">
                ${sort}
            </when>
            <otherwise>
                order by sort_order asc
            </otherwise>
        </choose>
        <if test="limit != null">
            limit #{limit}
        </if>
    </select>
    <select id="selectByCId" resultType="com.yoke.poseidon.web.entity.Item">
        <choose>
            <when test="blob==true">
                <include refid="itemColumnsWithBLOB"/>
            </when>
            <otherwise>
                <include refid="itemColumns"/>
            </otherwise>
        </choose>
        where c_id = #{cId}
        <choose>
            <when test="sort!=null">
                ${sort}
            </when>
            <otherwise>
                order by sort_order asc
            </otherwise>
        </choose>
        <if test="limit != null">
            limit #{limit}
        </if>
    </select>

</mapper>
