<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yoke.poseidon.web.mapper.ItemCatMapper">

    <select id="listRootCat" resultType="com.yoke.poseidon.web.entity.ItemCat">
        SELECT * FROM db_item_cat where parent_id = 0
    </select>

    <select id="listCatBySortOrder" resultType="com.yoke.poseidon.web.dto.ItemCatDto">
        select name,sort_order from db_item_cat order by sort_order asc limit #{limit}
    </select>
</mapper>
